{
  "name": "univer-sheet-start-kit",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "A starter kit for Univer Sheet",
  "scripts": {
    "prepare": "simple-git-hooks",
    "dev": "vite --host",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@univerjs/core": "0.5.0",
    "@univerjs/presets": "0.5.0",
    "@univerjs/sheets-crosshair-highlight": "0.5.0",
    "@univerjs/sheets-ui": "0.5.0",
    "@univerjs/sheets-zen-editor": "0.5.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.22.0-beta.3",
    "@univerjs/vite-plugin": "^0.5.1",
    "eslint": "^9.6.0",
    "eslint-plugin-format": "^0.1.2",
    "lint-staged": "^15.2.7",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
